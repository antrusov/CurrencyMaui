<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CurrencyMaui.Views.EurPage"
             Title="EurPage">
    <VerticalStackLayout>
        <Entry Text="{Binding Eur}"/>
        <Label 
            Text="{Binding Eur2Ru, StringFormat='RU={0}'}" />
        <Label 
            Text="{Binding Eur2Usd, StringFormat='USD={0}'}" />
    </VerticalStackLayout>
</ContentPage>