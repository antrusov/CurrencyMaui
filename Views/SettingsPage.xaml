<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CurrencyMaui.Views.SettingsPage"
             Title="SettingsPage">
    <VerticalStackLayout>
        <Label 
            Text="RU"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry Text="{Binding Ru2Gold}" />
        <Label 
            Text="USD"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry Text="{Binding Usd2Gold}" />
        <Label 
            Text="Eur"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry Text="{Binding Eur2Gold}" />
    </VerticalStackLayout>
</ContentPage>